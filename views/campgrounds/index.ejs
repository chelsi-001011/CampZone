<%- include("../partials/header") %>

 <div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To CampZone!</h1>
			<p>View our hand-picked campgrounds from all around the world</p>
			<p>
				<a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campround</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<div class="col-sm-12">
			<h3>Our Most Popular Camping Grounds!</h3>
		</div>
		<% campgrounds.forEach(function(campgrounds){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= campgrounds.image %>" >
			</div>
			<div class="caption"><h4><%= campgrounds.name %></h4></div>
			<p>
				<a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary"s>More Info</a>
			</p>
		</div>
		<% }); %>
	</div>
 </div>
<%- include("../partials/footer") %>